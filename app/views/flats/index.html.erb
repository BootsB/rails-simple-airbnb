<div class="container">
  <h1 class="mt-3">All our Flats</h1>
  <p>All <%= @flats.size %> flats.</p>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4 mb-4">
      <div class="card">
        <img class="card-img-top"src="<%= flat.picture_url %>" height="300px">
        <div class="card-body bg-light">
          <div class="card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <div>
              <i class="fa-solid fa-people-line"></i>
              <span><%= flat.number_of_guests %></span>
            </div>
              <div class="ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="m-3">
            <%= link_to "SEE MORE", flat_path(flat.id), class: "btn btn-sm btn-success " %>
            <%= link_to "EDIT", edit_flat_path(flat.id), class: "btn btn-sm btn-secondary ms-1" %>
            <%= link_to "DELETE", flat_path(flat.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-sm btn-danger ms-1" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
